<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow layer -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="#66000000" /> <!-- Shadow color with transparency -->
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- Button background layer -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" />
            <stroke android:color="@color/black" android:width="5dp"/>
            <corners android:radius="30dp" />
        </shape>
    </item>

</layer-list>
